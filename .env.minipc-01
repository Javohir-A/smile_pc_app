# .env.minipc-01 - Specific mini PC configuration example
# =============================================================================
# DEVICE IDENTIFICATION
# =============================================================================
DEVICE_NAME=minipc-entrance-01
DEVICE_LOCATION=main-entrance
DEVICE_TYPE=mini-pc

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
WORKERS_DIR=src/workers
LOG_FILE=/var/log/face-detection/minipc-01.csv
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# CAMERA CONFIGURATION - Entrance cameras
# =============================================================================
RTSP_URLS=rtsp://admin:entrance123@192.168.100.10:554/Streaming/Channels/102?rtsp_transport=tcp,rtsp://admin:entrance123@192.168.100.11:554/Streaming/Channels/102?rtsp_transport=tcp

FALLBACK_URL=rtsp://admin:backup123@192.168.100.20:554/stream

MAX_RECONNECTS=8
RECONNECT_DELAY=3.0
MAX_ERRORS=15
CAMERA_POLL_INTERVAL=1800
STREAM_TIMEOUT=45
BUFFER_SIZE=1500000

# =============================================================================
# DETECTION CONFIGURATION - Optimized for entrance
# =============================================================================
DETECTION_SIZE=416,416
DETECTION_INTERVAL=2
DISTANCE_THRESHOLD=0.65
CONFIDENCE_THRESHOLD=0.6

EMOTION_DETECTION_INTERVAL=0.4
MIN_EMOTION_DURATION=1.2
MAX_FACES_PER_FRAME=8
FACE_RECOGNITION_TIMEOUT=7

# =============================================================================
# DISPLAY CONFIGURATION - No GUI for entrance mini PC
# =============================================================================
ENABLE_GUI=false
SHOW_FPS=false
SHOW_DETECTION_BOXES=false
SHOW_EMOTION_LABELS=false
FULLSCREEN=false

# Hardware specific optimizations
CPU_THREADS=4
MEMORY_LIMIT=4GB

# =============================================================================

